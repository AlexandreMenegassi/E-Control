@model EControl.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div style="margin:auto">
    <div>
        <form asp-action="Login" class="form-signin">
            <div class="img">
                <img class="mb-4" src="~/images/logo.png">
            </div>
            <div class="opa">
                <h1 class="h4 mb-4 font-weight-normal-"><br /><br />Por favor, insira suas credênciais<br /><br /></h1>
            </div>
            <input asp-for="Login" type="text" id="inputLogin" class="form-control" required="" autofocus=""><br />
            <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Senha" required=""><br />
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="entrar" />
        </form>
    </div>
</div>

<div id="wrapper">
    <section id="tutorial">
        <aside id="canvas-container"></aside>
    </section>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
<script>window.jQuery || document.write("<script src='../cubo/js/libs/jquery-1.5.1.min.js'>\x3C/script>")</script>
<script type="text/javascript" src="~/cubo/js/yepnope.1.0.1-min.js"></script>

<script>
            yepnope({
                test: Modernizr.canvas,
                yep: ['../cubo/build/Three.js', '../cubo/js/RequestAnimationFrame.js', '../cubo/js/canvas.js'],
                nope: '~/cubo/css/canvas-polyfill.css'
            });
</script>