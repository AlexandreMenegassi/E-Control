@model EControl.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<main role="main" class="col-md-5 ml-sm-auto col-lg-12 px-4">

    <h2>Preencha os Dados</h2>
    <hr />

    <div class="col-md-3">
        <form asp-action="Create" class="form-signin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Sobrenome</label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Sexo</label>
                <input asp-for="Sexo" class="form-control" />
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Data de Nascimento</label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Endereço</label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Número da Residência</label>
                <input asp-for="EnderecoNum" class="form-control" />
                <span asp-validation-for="EnderecoNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Telefone Celular</label>
                <input asp-for="TelefoneCel" class="form-control" />
                <span asp-validation-for="TelefoneCel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Telefone Residêncial</label>
                <input asp-for="TelefoneRes" class="form-control" />
                <span asp-validation-for="TelefoneRes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cargo</label>
                <input asp-for="Cargo" class="form-control" />
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-default">Voltar</a>
            </div>
        </form>
    </div>
</main>