@model EControl.Models.Fornecedor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutiFrame.cshtml";
}

<main role="main" class="col-md-5 ml-sm-auto col-lg-12 px-4">

    <h2>Dados Pessoais</h2>
    <hr />
    <div class="col-md-3">

        <dl class="dl-horizontal">
            <dt>
                Nome da Empresa
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NomeEmp)
            </dd>
            <dt>
                Nome do Representante
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NomeRep)
            </dd>
            <dt>
                CNPJ
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cnpj)
            </dd>
            <dt>
               Telefone Comercial 1
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TelefoneCom1)
            </dd>
            <dt>
                Telefone Comercial 2
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TelefoneCom2)
            </dd>
            <dt>
                Telefone Celular 1
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TelefoneCel1)
            </dd>
            <dt>
                Telefone Celular 2
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TelefoneCel2)
            </dd>
            <dt>
                Endereço
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Endereco)
            </dd>
            <dt>
                Descrição da Empresa
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DescricaoEmp)
            </dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Editar</a>
        <a asp-action="Index" class="btn btn-default">Voltar</a>
    </div>
</main>