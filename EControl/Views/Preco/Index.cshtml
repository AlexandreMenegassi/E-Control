@model IEnumerable<EControl.Models.Preco>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutiFrame.cshtml";
}


<main role="main" class="col-md-10 ml-sm-auto col-lg-12 px-4">

    <h2>Lista de Despeza</h2>
    <hr />
    <div class="table-responsive">

        <div class="table-responsive">

            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>
                            Serviços
                        </th>
                        <th>
                            Valor
                        </th>
                        <!--
                            <th>
                                Desconto
                            </th>
                            <th>
                                Total
                            </th>
                        -->
                        <th>
                            Funcionário
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdServicoNavigation.Nome)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Custo)
                        </td>
                        <!--
                        <td></td>
                        <td></td>
                        -->
                        <td>
                            @Html.DisplayFor(modelItem => item.IdFuncionarioNavigation.Nome)
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a asp-action="Create" class="btn btn-default">Adicionar Serviço Diário</a>
</main>



